BasedOnStyle: LLVM  # Use LLVM as base, then override settings
IndentWidth: 3      # 4 spaces for indentation
UseTab: Never       # Always use spaces (modern convention)
BreakBeforeBraces: Allman  # Place braces on a new line (Allman style)
ColumnLimit: 100    # Allows slightly longer lines before wrapping
AllowShortFunctionsOnASingleLine: Empty  # Only empty functions can be single-line
PointerAlignment: Right  # int* ptr; instead of int *ptr;
SpaceBeforeParens: ControlStatements  # if (...) instead of if(...)
AlignTrailingComments: true  # Nicely align inline comments
ReflowComments: true  # Properly format long comments
SortIncludes: false  # Keeps #includes in original order
BinPackParameters: false  # Each function parameter on its own line if too long
BinPackArguments: false  # Same for function arguments

